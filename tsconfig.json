{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "ES2015",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}

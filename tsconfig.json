{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "scripthost"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@fartts/lib/*": [
        "src/lib/*"
      ]
    },
    "strict": true,
    "target": "es2015",
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
